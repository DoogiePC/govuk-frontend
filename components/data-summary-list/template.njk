<dl class="govuk-data-summary-list {%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  {% for row in params.rows %}
    <div class="govuk-data-summary-list__row">
      <dt class="govuk-data-summary-list__key {%- if row.key.classes %} {{ row.key.classes }}{% endif %}">
        {{ row.key.html | safe if row.key.html else row.key.text }}
      </dt>
      <dd class="govuk-data-summary-list__value {%- if row.value.classes %} {{ row.value.classes }}{% endif %}">
        {{ row.value.html | safe if row.value.html else row.value.text }}
      </dd>
      {% if row.actions.items %}
        <dd class="govuk-data-summary-list__actions {%- if row.actions.classes %} {{ row.actions.classes }}{% endif %}">
          <ul class="govuk-data-summary-list__actions-list">
            {% for action in row.actions.items %}
              {%- set visuallyHiddenText -%}
                {%- if action.visuallyHiddenText -%}
                  {{- action.visuallyHiddenText -}}
                {# If there's text supplied to the row.key we can reuse it automatically #}
                {%- elif row.key.text -%}
                  {{- row.key.text -}}
                {%- endif -%}
              {%- endset -%}
              <li class="govuk-data-summary-list__actions-list-item">
                <a class="govuk-link" href="{{ action.href }}">
                  {{ action.html | safe if action.html else action.text }}<span class="govuk-visually-hidden"> {{ visuallyHiddenText }}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </dd>
      {% endif %}
    </div>
  {% endfor %}
</dl>
